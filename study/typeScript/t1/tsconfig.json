    "compilerOptions":{
        "module": "amd",//或system  
        "sourceMap":true,  
        "outFile": "./index.js"  
    },  
    "include": [  
        "./index.ts"  
    ],  
    "exclude": [//不包括的文件  
        "node_module"  
    ]
}
