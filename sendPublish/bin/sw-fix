#!/usr/bin/env node
const execSync = require('child_process').execSync;

const async = require('async');
const program = require('commander');

const checkVersion = require('../lib/check_version.js');
const globalData = require('../lib/global_data.js');
const publishFix = require('../lib/fix/publish.js');
const chunyanFix = require('../lib/fix/chunyan.js');

program.on('--help', function () {
    console.log('  Examples:');
    console.log('');
    console.log('    $ sw fix --publish');
    console.log('');
});

program
    .option('--publish', 'è‡ªåŠ¨ä¿®å¤å‘å¸ƒç›¸å…³å†…å®¹')
    .option('--chunyan', 'ä¿®å¤æ˜¥å²©è€çš„é¡¹ç›®å‘å¸ƒæ–¹å¼')
    .parse(process.argv);


async.waterfall([
    function (next) {
        checkVersion.run(next);
    },
    function (next) {
        if (program.publish) {
            try {
                publishFix.fix();
                next();
            } catch (e) {
                next(e);
            }
        }

        if (program.chunyan) {
            try {
                chunyanFix.fix();
                next();
            } catch (e) {
                next(e);
            }
        }
    }
], function (err) {
    if (err) {
        console.log(err.stack, '\n');

        process.exit(1);
    }

    try {
        execSync(`rm -rf ${globalData.GZ_FILES_FOLDER}`);
    } catch (e) {

    }

    console.log('ğŸ—‚  ä¿®æ”¹å®Œæˆ\n');
});
